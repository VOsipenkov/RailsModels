<h1>Listing Employs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Phone</th>
      <th>Organization</th>
      <th colspan="3"></th>
      <th> Actions </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @employs.each do |employ| %>
      <tr>
        <td><%= employ.name %></td>
        <td><%= employ.position %></td>
        <td><%= employ.phone %></td>
        <td><%= employ.organization_id %></td>
        <td><%= link_to 'Show', [@organization, employ]  %></td>
    <td>
      <%= link_to 'Edit',  :controller=>'employs', :action => 'edit', :id => employ.id, :organization_id => employ.organization_id %>
    </td>

    <td>
      <%= link_to 'Delete',
                  { :controller => 'employs', :action => 'destroy', :id => employ.id, :organization_id => employ.organization_id },
                  { :confirm => 'Are you sure?', :method => :delete, :remote => true}  %>
    </td>

      </tr>
    <% end %>
  </tbody>
</table>

